{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "assignees": ["SamNewhouse"],
  "addLabels": ["dependency"],
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "description": "Sync shared devDependencies and peerDependencies across root and template packages",
      "matchFileNames": ["package.json", "serverless/package.json"],
      "matchDepNames": ["typescript", "prettier", "@types/node"],
      "groupName": "shared-dev-peer-deps",
      "commitMessagePrefix": "[SYNC-SHARED-DEPS]",
      "automerge": false
    },
    {
      "description": "Update remaining CLI-only devDependencies",
      "matchFileNames": ["package.json"],
      "matchDepTypes": ["devDependencies"],
      "excludePackageNames": ["typescript", "prettier", "@types/node"],
      "commitMessagePrefix": "[CLI-DEVDEP]",
      "automerge": false
    },
    {
      "description": "Update peerDependencies in root and serverless package.json",
      "matchFileNames": ["package.json", "serverless/package.json"],
      "matchDepTypes": ["peerDependencies"],
      "excludePackageNames": ["typescript", "prettier", "@types/node"],
      "commitMessagePrefix": "[PEERDEP]",
      "automerge": false
    }
  ]
}
